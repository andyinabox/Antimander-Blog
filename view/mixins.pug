
mixin section_nav(active)
    //- h2!=active.toUpperCase()
    .section_nav
        for name, idx in ['intro', 'background', 'viewer', 'metrics', 'methods', 'results', 'next-steps', 'appendix', 'references']
            p.navlink(class = name == active ? 'active' : '')
                a(href='#'+name)!=idx+': '+name.toUpperCase()

